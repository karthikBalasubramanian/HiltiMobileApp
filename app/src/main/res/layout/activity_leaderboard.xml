<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
<!--- android:layout_height="20mm" -->
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/takeQuizOptionsView"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    >
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="55dp"
    android:background="@drawable/hilti_wall"
    android:gravity="center|top"
    android:orientation="vertical">
    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#232323"
        android:maxLines="1"
        android:text="HIGH SCORES"
        android:textStyle="bold|italic"
        android:padding="1mm" />

    <ListView
        android:id="@+id/scores"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title"
        android:layout_above="@+id/btn_exitLeaderboard"
        android:background="@drawable/blacklayout_bg"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp"
        />

    <Button
        android:id="@+id/btn_exitLeaderboard"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Exit"
        android:padding="10dp"
        android:layout_marginTop="-60dp"
        android:background="#f44437"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal|bottom" />


</LinearLayout>

    <include
        android:id="@+id/leaderBoardToolbar"
        layout="@layout/activity_toolbar" />

</FrameLayout>
    </RelativeLayout>