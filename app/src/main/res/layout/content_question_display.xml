<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_question_display"
    android:background="@drawable/hilti_wall"
    android:orientation="vertical"
    tools:context="quiz.mobile.hiliti.com.hiltimobileapp.QuestionDisplayActivity"
    android:gravity="center_vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_margin="15dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/questionText"
                android:gravity="center"
                android:background="@drawable/whitelayout_bg"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textStyle="bold" />

            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <RadioGroup android:id="@+id/toggleGroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_margin="15dp"
                android:background="@drawable/whitelayout_bg"
                android:orientation="vertical"
                android:padding="15dp">

                <RadioButton android:id="@+id/buttonOptionA"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColorHighlight="@color/primary"
                    android:layout_marginBottom="20dp"
                    android:buttonTint="@color/primary"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />

                <RadioButton android:id="@+id/buttonOptionB"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColorHighlight="@color/primary"
                    android:layout_marginBottom="20dp"
                    android:buttonTint="@color/primary"
                    android:textColor="#000000"
                    android:textStyle="bold" />


                <RadioButton android:id="@+id/buttonOptionC"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColorHighlight="@color/primary"
                    android:layout_marginBottom="20dp"
                    android:buttonTint="@color/primary"
                    android:textColor="#000000"
                    android:textStyle="bold" />


                <RadioButton android:id="@+id/buttonOptionD"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColorHighlight="@color/primary"
                    android:buttonTint="@color/primary"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </RadioGroup>


            <android.widget.Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Submit Quiz"
                android:onClick="submitQuiz"
                android:background="#f44437"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:padding="10dp"/>

        </LinearLayout>


    </ScrollView>


</LinearLayout>
