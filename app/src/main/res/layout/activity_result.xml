<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/hilti_wall"
    >

    <FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/takeQuizOptionsView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/resultview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:gravity="center|top"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
        android:id="@+id/recyler_result"
        android:layout_below="@+id/results"
        android:background="@drawable/whitelayout_bg"
        android:padding="5dp"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="150dp" />

        <Button
            android:id="@+id/btn_displayScore"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/whitelayout_bg"
            android:padding="10dp"
            android:text="Test Score"
            android:textColor="#f44538"
            android:textStyle="bold"
            android:layout_marginTop="-130dp"
            android:textSize="16dp" />


    <Button
        android:id="@+id/btn_exitLeaderboard"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="#f44437"
        android:padding="10dp"
        android:text="Exit"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />

    </LinearLayout>

<include
android:id="@+id/resultToolbar"
layout="@layout/activity_toolbar" />

    </FrameLayout>

    </RelativeLayout>